.row
  .col-6.mx-auto
    .card
      .card-body.p-5
        %h5.text-center.bold.text-uppercase= t("labels.login")
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .mb-3
            = f.label t("labels.email"), class: "form-label"
            = f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email"
          .mb-3
            = f.label t("labels.password"), class: "form-label"
            = f.password_field :password, autocomplete: "current-password", class: "form-control"
          .mb-3.form-check
            = f.check_box :remember_me, class: "form-check-input"
            = f.label :remember_me, class: "form-check-label"
          = f.submit t("labels.login"), class: "btn btn-primary btn-block"
